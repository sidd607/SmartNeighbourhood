<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Community &nbsp &nbsp</th>
      <th>Profile &nbsp &nbsp</th>
      <th>Title &nbsp &nbsp</th>
      <th>Body &nbsp &nbsp</th>
      <th>Create date &nbsp &nbsp</th>
      <th>Update date &nbsp &nbsp</th>
      <th>Type &nbsp &nbsp</th>
      <th>Priority &nbsp &nbsp</th>
      <th>Report &nbsp &nbsp</th>
      <th>Rating &nbsp &nbsp</th>
      <th>Ratecount &nbsp &nbsp</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.community_id %></td>
        <td><%= post.profile_id %></td>
        <td><%= post.title.titlecase %></td>
        <td><%= post.body %></td>
        <td><%= post.create_date %></td>
        <td><%= post.update_date %></td>
        <td><%= post.data_type %></td>
        <td><%= post.priority %></td>
        <td><%= post.report %></td>
        <td><%= post.rating %></td>
        <td><%= post.rateCount %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_with_parameter_path(2) %>

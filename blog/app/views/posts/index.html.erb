<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<%= form_tag posts_path, :method => 'get', :id => "posts_search" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<div id = "posts">
  <%= render 'posts' %>
</div>
<br>

<%= link_to 'New Post', new_post_with_parameter_path(2) %>

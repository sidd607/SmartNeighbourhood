

<% @posts.each do |post| %>
<article>
  <div class="col-sm-offset-6 col-md-offset-3">

      <h2><%= link_to post.title, post %></h2>
      <p class=created_at"> Posted By <%= post.profile_id %></p>
      <p><%= post.body %></p>

      <p><%= link_to 'Edit', edit_post_path(post) %></p>
      <p><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></p>
  </div>
</article>
<br>
      <% end %>


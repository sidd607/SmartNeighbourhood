<%= form_for(@post) do |f| %>
    <% if @post.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

          <ul>
            <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <%= f.hidden_field :data_type, :value => 1 %>
    <div class="field">
      <%= f.label :blog %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :body %><br>
      <%= f.text_field :body %>
    </div>
    <div class="field">
      <%= f.label :tag_list, "Tags (separated by commas)" %><br>
      <%= f.text_field :tag_list %>
    </div>
    <div class="actions">
      <%= f.submit "Create Blog" %>
    </div>
<% end %>
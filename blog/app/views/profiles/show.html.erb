<section id="content">
  <div class="container wall">
    <div class="row">
      <div class="col-md-12">

        <div class="card" id="profile-main">
                        <div class="pm-overview c-overflow">
                            <div class="pmo-pic">
                                <div class="p-relative">
                                    <a href="profile-about.html">
                                      <% if @profile.gender == 'm' %>
                                        <img class="img-responsive" src="<%= $base_url %>/img/profile-pics/4.jpg" alt="">
                                        <% else %>
                                        <img class="img-responsive" src="<%= $base_url %>/img/profile-pics/1.jpg" alt="">
                                        <% end %>
                                    </a>

                                </div>
                                <div class="pmo-stat">
                                    <h2 class="m-0 c-white"><%= @profile.firstName + " " + @profile.LastName %></h2>
                                    <% @profile_role = Role.find(@profile.role_id) %>
                                    <%= @profile_role.name %>
                                </div>
                            </div>




                        </div>

                        <div class="pm-body clearfix">

                            <div class="pmb-block">
                                <div class="pmbb-header">
                                    <h2><i class="zmdi zmdi-account m-r-5"></i> Information</h2>


                                </div>
                                <div class="pmbb-body p-l-30">
                                    <div class="pmbb-view">
                                        <dl class="dl-horizontal">
                                            <dt>Full Name</dt>
                                            <dd><%= @profile.firstName + " " + @profile.LastName %></dd>
                                        </dl>
                                        <dl class="dl-horizontal">
                                          <dt>Gender</dt>
                                            <% if @profile.gender == 'm' %>
                                            <dd>Male</dd>
                                            <% else %>
                                            <dd>Female</dd>
                                            <% end %>
                                        </dl>
                                        <dl class="dl-horizontal">
                                            <dt>Birthday</dt>
                                            <dd><%=  @profile.DOB.strftime("%B %d, %Y")%></dd>
                                        </dl>
                                        <dl class="dl-horizontal">
                                            <dt>Position in The Community</dt>
                                            <dd><%= @profile_role.name %></dd>
                                        </dl>
                                    </div>


                                </div>
                            </div>


                            <div class="pmb-block">
                                <div class="pmbb-header">
                                    <h2><i class="zmdi zmdi-phone m-r-5"></i> Contact Information</h2>
                                    <% if @current_profile.id == @profile.id %>
                                    <ul class="actions">
                                        <li class="dropdown">
                                            <a href="profile-about.html" data-toggle="dropdown">
                                                <i class="zmdi zmdi-more-vert"></i>
                                            </a>

                                            <ul class="dropdown-menu dropdown-menu-right">
                                                <li>
                                                    <a data-pmb-action="edit" href="profile-about.html">Edit</a>
                                                </li>
                                            </ul>
                                        </li>
                                    </ul>
                                    <% end %>
                                </div>
                                <div class="pmbb-body p-l-30">
                                    <div class="pmbb-view">
                                        <dl class="dl-horizontal">

                                            <dt>Mobile Phone</dt>
                                            <% if @profile.showPhone == 1 %>
                                            <dd><%=@profile.phone %></dd>
                                            <% else %>
                                            <dd>Not Available</dd>
                                            <% end %>
                                        </dl>
                                        <dl class="dl-horizontal">
                                            <dt>Email Address</dt>
                                            <dd><%= @profile.email %></dd>
                                        </dl>

                                    </div>

                                    <div class="pmbb-edit">
                                        <dl class="dl-horizontal">
                                          <%= form_for(@profile) do |f| %>
                                            <dt class="p-t-10">Mobile Phone</dt>
                                            <dd>
                                                <div class="fg-line">

                                                    <%= f.text_area :phone, class:'form-control', placeholder:'eg. 9886680325' %>
                                                </div>
                                            </dd>
                                        </dl>
                                        <dl class="dl-horizontal">
                                            <dt class="p-t-10">Email Address</dt>
                                            <dd>
                                                <div class="fg-line">

                                                    <%= f.text_area :email, class:'form-control', placeholder:'xyz@abc.com' %>
                                                </div>
                                            </dd>
                                        </dl>
                                        <div class="m-t-30">
                                            <button class="btn btn-primary btn-sm">Save</button>
                                            <button data-pmb-action="reset" class="btn btn-link btn-sm">Cancel</button>
                                        </div>
                                        <% end %>



                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
      </div>
    </div>
  </div>
</section>
<p id="notice"><%= notice %></p>

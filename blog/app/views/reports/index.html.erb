<p id="notice"><%= notice %></p>

<h1>Listing Reports</h1>

<table>
  <thead>
    <tr>
      <th>Profile</th>
      <th>Post</th>
      <th>Type</th>
      <th>Profile</th>
      <th>Reason</th>
      <th>Reported at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.profile_id %></td>
        <td><%= report.post_id %></td>
        <td><%= report.data_type %></td>
        <td><%= report.profile_id %></td>
        <td><%= report.reason %></td>
        <td><%= report.reported_at %></td>

        <td><a href = "<%= $base_url %>/reports/<%= report.id %>" > show </a></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, action: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
